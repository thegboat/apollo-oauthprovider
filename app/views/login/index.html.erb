<%= form_for(@user, :url => user_path(@user)) do |f| %>
  <div class="clearfix">
    <%= f.label :username %>
    <div class="input">
      <%= f.email_field :username %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign in", :class => "btn btn-primary" %><small> or <%=link_to "Sign Up", users_sign_up_path %></small>
  </div>
<% end %>
